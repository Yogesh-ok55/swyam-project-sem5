<%- include("header"); %>

<div style="border: 2px solid blue; height: auto; width: 1000px; margin: 20px auto; padding: 20px;">
    <h1 class="bg-primary text-light text-center">Add Category</h1>
    <form action="/addCategorySubmit" method="post">
        <table align="center" class="table table-bordered"
            <tr>
                <td>Name</td>
                <td><input type="text" name="name" required /></td>
            </tr>
            <tr>
                <td>Description</td>
                <td><input type="text" name="description" required /></td>
            </tr>
            <tr>
                <td colspan="2" align="center"><input type="submit" class="btn btn-primary" value="Submit" /></td>
            </tr>
        </table>
    </form>
</div>
