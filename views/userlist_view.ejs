<%- include("header") %>

<div style="border: 2px solid rgb(68, 68, 235); height: auto; width: 1000px; margin: 20px auto; padding: 20px;">
    <h1 class="bg-primary text-light text-center">User List</h1>
    <table class="table table-bordered" align="center">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Gender</th>
                <th>Role</th>
                <th>Enrolled Courses</th>
            </tr>
        </thead>
        <tbody>
            <% for (let user of userData) { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.gender %></td>
                    <td><%= user.role %></td>
                    <td><%= user.enrolled_courses %></td>
                    <td>
                        <td>
                            <a href="/editUser?userId=<%= user._id %>" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/deleteUser?userId=<%= user._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this lesson?');">Delete</a>
                        </td>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
