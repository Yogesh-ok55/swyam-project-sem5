<%- include("header") %>

<div style="border: 2px solid blue; height: auto; width: 1000px; margin: 20px auto; padding: 20px;">
    <h1 class="bg-primary text-light text-center">Category List</h1>
    <table class="table table-bordered" align="center">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            <% for (let cat of categoryData) { %>
                <tr>
                    <td><%= cat.name %></td>
                    <td><%= cat.description %></td>
                    <td> <td>
                        <a href="/editCategory?catId=<%= cat._id %>" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/deleteCategory?catId=<%= cat._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this lesson?');">Delete</a>
                    </td>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
