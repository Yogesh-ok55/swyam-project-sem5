<%- include("header") %>

<div style="border: 2px solid blue; height: auto; width: 1000px; margin: 20px auto; padding: 20px;">
    <h1 class="bg-primary text-light text-center">Edit Notification</h1>
    <form action="/editNotificationSubmit" method="post">
        <table align="center" class="table table-bordered">
            <tr>
                <td>Name</td>
                <td><input type="text" name="user_id" value="<%= notification.name%>" class="form-control" required /></td>
            </tr>
            <tr>
                <td>Message</td>
                <td><textarea name="message" class="form-control" rows="4" required><%= notification.message %></textarea></td>
            </tr>
            <tr>
                <td>Date</td>
                <td><input type="datetime-local" name="date" value="<%= new Date(notification.date).toISOString().slice(0,16) %>" class="form-control" required /></td>
            </tr>
            <tr>
                <td>Status</td>
                <td>
                    <select name="status" class="form-control" required>
                        <option value="unread" <%= notification.status === 'unread' ? 'selected' : '' %>>Unread</option>
                        <option value="read" <%= notification.status === 'read' ? 'selected' : '' %>>Read</option>
                    </select>
                </td>
            </tr>
            <input type="hidden" name="notificationId" value="<%= notification._id %>" />
            <tr>
                <td colspan="2" align="center"><input type="submit" class="btn btn-primary" value="Update" /></td>
            </tr>
        </table>
    </form>
</div>
